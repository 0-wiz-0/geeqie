# bash completion for geeqie                              -*- shell-script -*-

_geeqie()
{
    local cur
    _init_completion -s || return

    if [[ $cur == -* ]]
    then
        COMPREPLY=($(compgen -W '$(_parse_help "$1")' -- "$cur"))
        [[ ${COMPREPLY-} == *= ]] && compopt -o nospace
        return
    fi

} &&
    complete -F _geeqie geeqie

# ex: filetype=sh
